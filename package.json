{
  "name": "sol-bot",
  "version": "1.0.0",
  "description": "ソラナUSDTトレーディングアルゴリズム",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:smoke": "ts-node src/core/smokeTest.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "fetch-hourly": "ts-node src/data/fetchHourlyData.ts",
    "optimize": "ts-node src/optimizer/runOptimization.ts",
    "generate-sample-data": "ts-node src/data/generateSampleData.ts",
    "backtest": "ts-node src/core/backtestRunner.ts",
    "backtest:smoke": "ts-node src/core/backtestRunner.ts --smoke-test --days 3",
    "validate-sample-data": "ts-node src/data/runSampleTest.ts"
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "apache-arrow": "^14.0.2",
    "axios": "^1.6.2",
    "ccxt": "^4.1.61",
    "dotenv": "^16.3.1",
    "duckdb": "^1.2.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "node-cron": "^3.0.3",
    "parquetjs": "^0.11.2",
    "technicalindicators": "^3.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
