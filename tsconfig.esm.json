{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2022",
    "moduleResolution": "Node",
    "target": "es2022",
    "sourceMap": true,
    "declaration": true,
    "verbatimModuleSyntax": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.mjs"],
  "exclude": ["src/__tests__/**/*", "**/*.test.ts", "**/*.test.mjs", "**/*.js"]
} 