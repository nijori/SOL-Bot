{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "sourceMap": true,
    "declaration": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/__tests__/**/*", "**/*.test.ts", "**/*.test.mjs"]
}
